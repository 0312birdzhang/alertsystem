<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="wrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrapContent_centure" parent="wrapContent">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textWrapContent" parent="wrapContent">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fill_parent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="width_fill_parent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="config_divid_line" parent="width_fill_parent">
        <item name="android:layout_height">0.8dip</item>
        <item name="android:background">#CCCCCC</item>
    </style>

    <style name="detail_text" parent="width_fill_parent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="title_text" parent="wrapContent">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

</resources>